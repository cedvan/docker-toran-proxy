#!/bin/sh

start() {
    DATE="$(date)"
    echo ""
    echo "=========="
    echo "$DATE - Starting synchronization..."

    # Launch cron
    sudo -E -u www-data bash -c "cd /var/www && php bin/cron -v"

    DATE="$(date)"
    echo "$DATE - Synchronization finished"
    echo "=========="

    exit 0
}

case $1 in
  start) "$1" ;;
esac
